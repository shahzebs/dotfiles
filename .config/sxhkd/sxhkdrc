
## Basic binds

# Launch st terminal
super + Return
        st

# Lock screen
super + shift + l
        $HOME/.scripts/isinstalled slock && ( slock & xset dpms force off ; playerctl pause )

# Launch Brave/Firefox/Chrome browser
super + {+,shift,ctrl} + x
        {brave-browser,firefox,google-chrome} > /dev/null 2>&1

# Launch Thunderbird
super + e
        thunderbird > /dev/null 2>&1

# Launch Spotify
super + ctrl + s
        spotify > /dev/null 2>&1

# Launch dmenu prompt for editing config files
super + c
        $HOME/.scripts/dmenu_configs/dmenu_configs.sh

# Launch python shell with numpy
super + shift + c
        st -t "Python Shell" -e python3 -ic "import numpy as np"

# Play/pause audio
super + p
        playerctl play-pause > /dev/null 2>&1; pkill -RTMIN+3 dwmblocks

# Go to next/previous track
super + {Right,Left}
        playerctl {next,previous} > /dev/null 2>&1; pkill -RTMIN+3 dwmblocks

# Increase/decrease volume by 10%
super + {plus,minus}
        amixer -D pulse set Master 10%{+,-} > /dev/null 2>&1; pkill -RTMIN+1 dwmblocks

# Mute/unmute audio
super + shift + p
        amixer -D pulse set Master toggle > /dev/null 2>&1; pkill -RTMIN+1 dwmblocks

# Increase/decrease screen brightness
super + shift + {plus,minus}
        xbacklight -{inc,dec} 10 > /dev/null 2>&1; pkill -RTMIN+4 dwmblocks

# dmenu prompt with list of processes to kill (processes executed by user shahzebs)
super + ctrl + k
        $HOME/.scripts/killallclients > /dev/null 2>&1

# dmenu prompt to change WiFi (should give feedback)
super + shift + w
        $HOME/.scripts/wificonnect > /dev/null 2>&1

# dmenu prompt to open a pdf file under the home directory
super + shift + o
        $HOME/.scripts/openpdf > /dev/null 2>&1

# dmenu prompt for translating text
super + ctrl + t
        $HOME/.scripts/translate > /dev/null 2>&1

# Open Caprine (Facebook Messenger app)
super + shift + f
        caprine > /dev/null 2>&1 &

# Shutdown/reboot
super + ctrl + alt + {p,r}
        {shutdown now,reboot}

# Restart dwmblocks (status bar)
super + shift + b
        killall dwmblocks; dwmblocks > /dev/null 2>&1 &

# Toggle dark/light mode (change background)
super + alt + d
        {feh --no-fehbg --no-xinerama --bg-fill $HOME/Dropbox/wallpapers/landscape/duskdunes.jpeg,$HOME/.scripts/local/fehbg}

# Screenshot by selection and add to clipboard
super + shift + F12
        sleep 0.2; $HOME/.scripts/screen_copy.sh > /dev/null 2>&1

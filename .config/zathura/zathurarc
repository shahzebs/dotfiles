set highlight-color "#ffffff"
set highlight-active-color "#ff0000"
set highlight-transparency 0.1
set selection-clipboard clipboard
set sandbox none

set default-bg rgba(40,40,40,0.8)
set recolor-lightcolor rgba(0,0,0,0)

unmap d
unmap <C-d>
unmap <C-u>

map <C-d> toggle_page_mode
map d scroll half-down
map u scroll half-up


#!/bin/bash

volstat="$(amixer -D pulse get Master)"

if [ "$(echo $volstat | grep "\[off\]")" ]; then
    printf "ðŸ”‡"
else
    vol=$(echo "$volstat" | awk -F[][] '/%/ {print $2;exit}' | awk -F% '{print $1}')

    if [ "$vol" -gt "70" ]; then
        icon="ðŸ”Š"
    elif [ "$vol" -lt "30" ]; then
        icon="ðŸ”ˆ"
    else
        icon="ðŸ”‰"
    fi

    printf "%s %s%%" "$icon" "$vol"
fi

printf " | "
